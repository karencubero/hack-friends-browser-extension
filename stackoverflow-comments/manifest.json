{
  "name": "Hack Friends Stackoverflow",
  "version": "1.0",
  "description": "Hack your friends changing all comments in Stackoverflow",
  "manifest_version": 2,
  "content_scripts": [{
    "js": ["background.js"],
    "matches": [
      "http://*.stackoverflow.com/*",
      "https://*.stackoverflow.com/*",
      "http://stackoverflow.com/*",
      "https://stackoverflow.com/*"
    ]
  }],
  "icons": {
    "16": "assets/duck-logo.png",
    "32": "assets/duck-logo.png",
    "48": "assets/duck-logo.png",
    "128": "assets/duck-logo.png"
  },
  "permissions": ["activeTab"]
}